<!DOCTYPE html>
<html lang="en">
  <!-- HEAD  -->

  <%- include('./partials/head', {tituloWeb: 'productos Fence'} ) %>

  <body>
    <!-- HEADER -->

    <%- include('./partials/header') %>
    <div class="detras-header"></div> 
    <main class="product-detail">
      <p class="page-index">Productos / <%=productos.nombre %> </p>
      
      <!-- PRODUCT CARD -->
      <div class="product-detail-container">

                  <!-- SECTION 1 - NAME -->
      <div class="product-card-nombre">
        <h1><%=productos.nombre%> </h1>
      </div>
       
                  <!-- SECTION 2 - PRECIO -->
      
                  <%
                  const formatoArgentina = (number) => {
                    const exp = /(\d)(?=(\d{3})+(?!\d))/g;
                    const rep = '$1.';
                    let arr = number.toString().split('.');
                    arr[0] = arr[0].replace(exp,rep);
                    return arr[1] ? arr.join(','): arr[0];
                  }
                  %>      
      
                  <div class="product-card-precio">
                  <h3>
        Precio: $ <%= formatoArgentina(productos.precio) %> 
        </h3>
      </div>
                  <!-- SECTION 3 - DETALLE -->
        <div class="product-card-detalle">
          <p>
            <%=productos.descripcion  %> 
          </p>

          <p>
            <%= productos.material %> 
           </p>
        </div>

                  <!-- SECTION 4 - IMAGEN -->
      <div class="product-card-imagen">
                  <img src="<%= productos.imagen%>" alt="" />

      </div>

    </div>

      <div class="actions-container">
        <div class="share-container">
          <h3>Compartir</h3>
          <div class="icons">
            <div class="icon">
              <a target="_blank" href="https://facebook.com"
                ><i class="fab fa-facebook"></i
              ></a>
            </div>
            <div class="icon">
              <a target="_blank" href="https://twitter.com">
                <i class="fab fa-twitter"></i
              ></a>
            </div>
            <div class="icon">
              <a target="_blank" href="https://linkedin.com"
                ><i class="fab fa-linkedin"></i
              ></a>
            </div>
          </div>
        </div>
        <div class="add-to-cart-container">
          <input type="number" name="cantidad" id="cantidad-productos" />
          <button class="button">Agregar</button>
        </div>
      </div>
