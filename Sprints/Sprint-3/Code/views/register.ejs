    <section class="caja-formulario">
      <div class="texto-bienvenida">Ingrese sus datos para poder utilizar nuestra plataforma</div>
      <form action="" method="POST" class="formulario-register">
        <div class="control-formulario">
          <label for="name">Nombre y apellido</label>
          <input type="text" name="name" id="name" class="control" >
        </div>
        <div class="control-formulario">
          <label for="empresa">Empresa</label>
          <input type="text" name="empresa" id="empresa" class="control">
        </div>
        <div class="control-formulario">
          <label for="cuit">CUIT/RUT</label>
          <input type="text" name="cuit" id="cuit" class="control">
        </div>
        <div class="control-formulario">
          <label for="telefono">Teléfono</label>
          <input type="tel" name="telefono" id="telefono" class="control">
        </div>
        <div class="control-formulario">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" class="control">
        </div>
        <div class="control-formulario">
          <label for="password">Contraseña</label>
          <input type="password" name="password" id="password" class="control" required minlenght="8">
        </div>
        <div class="control-formulario">
          <label for="password-verify">Repita la contraseña</label>
          <input type="password" name="password-verify" id="password-verify" class="control" onkeyup="validar()">
        </div>
        <div> <span id="password-error-message"></span></div>
        <button type="submit" class="button">Ingresar</button>
      </form>
    </section>



