  <body class="register">

     <!-- HEADER -->

    <%- include('./partials/header') %>

    <main class="principal">
    <img src="/images/home-peatones.jpg" width=600px class="imagen-ingreso">

      <!-- login-->
    <section class="caja-formulario">
      <div class="texto-bienvenida">Ingrese sus datos para poder utilizar nuestra plataforma</div>
      <form action="/users/register" method="POST" class="formulario-register" enctype="multipart/form-data">
        <div class="control-formulario">
          <label for="name">Nombre</label>
          <input type="text" name="nombre" id="name" class="control" >
        </div>
       
        <div class="control-formulario">
          <label for="empresa">Apellido</label>
          <input type="text" name="apellido" id="empresa" class="control">
        </div>
        <div class="control-formulario">
          <label for="cuit">Categoria</label>
          <input type="text" name="categoria" id="cuit" class="control">
        </div>
        <!-- <div class="control-formulario">
          <label for="telefono">Teléfono</label>
          <input type="tel" name="telefono" id="telefono" class="control">
        </div> -->
        <div class="control-formulario">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" class="control">
        </div>
        <div class="control-formulario">
          <input type="file" name="file" id="file" class="input-file"> 
             <label for="file">Agrega una imagen</label>
                      </div>
        <div class="control-formulario">
          <label for="password">Contraseña</label>
          <input type="password" name="password" id="password" class="control" required minlenght="8">
        </div>
        <div class="control-formulario">
          <label for="password-verify">Repita la contraseña</label>
          <input type="password" name="password-verify" id="password-verify" class="control" onkeyup="validar()">
        </div>
        <div> <span id="password-error-message"></span></div>


        <button type="submit" class="button">Ingresar</button>
      </form>
    </section>



